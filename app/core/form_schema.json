{
  "title": "Technical Assignment",
  "type": "object",
  "properties": {
    "_id": {
      "title": "id",
      "type": "string",
      "readonly": true,
      "propertyOrder": 100000
    },
    "name": {
      "title": "Assignment Name",
      "type": "string",
      "minLength": 1,
      "propertyOrder": 100010
    },
    "author": {
      "title": "Author Email",
      "type": "string",
      "minLength": 1,
      "propertyOrder": 100020
    },
    "created_at": {
      "title": "Create dtm",
      "type": "string",
      "readonly": true,
      "propertyOrder": 100030
    },
    "updated_at": {
      "title": "Update dtm",
      "type": "string",
      "readonly": true,
      "propertyOrder": 100040
    },
    "description": {
      "type": "string",
      "title": "Assignment description",
      "propertyOrder": 100050,
      "format": "markdown"
    },
    "blocks": {
      "title": "Blocks",
      "type": "array",
      "propertyOrder": 100060,
      "items": {
        "type": "object",
        "title": "Block",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "title": "Block name",
            "propertyOrder": 100100
          },
          "description": {
            "type": "string",
            "title": "Block description",
            "propertyOrder": 100200,
            "format": "xhtml",
            "options": {
              "wysiwyg": true
            }
          },
          "events": {
            "type": "array",
            "title": "Block events",
            "propertyOrder": 100300,
            "items": {
              "type": "object",
              "title": "Event",
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "title": "Event name",
                  "propertyOrder": 100350
                },
                "images": {
                  "type": "array",
                  "format": "table",
                  "propertyOrder": 100400,
                  "title": "Event Images",
                  "items": {
                    "type": "object",
                    "title": "Image",
                    "format": "grid",
                    "properties": {
                      "file": {
                        "type": "string",
                        "title": "File",
                        "media": {
                          "binaryEncoding": "base64",
                          "type": "img/png"
                        },
                        "options": {
                          "grid_columns": 6,
                          "multiple": true
                        }
                      },
                      "description": {
                        "type": "string",
                        "title": "Description",
                        "options": {
                          "grid_columns": 6
                        }
                      }
                    }
                  }
                },
                "event_type": {
                  "type": "string",
                  "title": "Event Type",
                  "enum": {{ event_type_mapper | tojson }},
                  "propertyOrder": 100500
                },
                "description": {
                  "type": "string",
                  "title": "Event Description",
                  "propertyOrder": 100600,
                  "format": "xhtml",
                  "default": {{ event_description | tojson }},
                  "options": {
                    "wysiwyg": true
                  }
                },
                "event_data": {
                  "type": "string",
                  "title": "Event Data",
                  "propertyOrder": 100700,
                  "format": "xhtml",
                  "options": {
                    "wysiwyg": true
                  }
                },
                "check_comment": {
                  "type": "string",
                  "title": "Check comment",
                  "propertyOrder": 100800,
                  "format": "xhtml",
                  "options": {
                    "wysiwyg": true
                  }
                },"check_images": {
                  "type": "array",
                  "format": "table",
                  "propertyOrder": 100900,
                  "title": "Check Images",
                  "items": {
                    "type": "object",
                    "title": "Image",
                    "format": "grid",
                    "properties": {
                      "file": {
                        "type": "string",
                        "title": "File",
                        "media": {
                          "binaryEncoding": "base64",
                          "type": "img/png"
                        },
                        "options": {
                          "grid_columns": 6,
                          "multiple": true
                        }
                      },
                      "description": {
                        "type": "string",
                        "title": "Description",
                        "options": {
                          "grid_columns": 6
                        }
                      }
                    }
                  }
                },
                "internal_comment": {
                  "type": "string",
                  "title": "Internal comment",
                  "propertyOrder": 101000,
                  "format": "xhtml",
                  "options": {
                    "wysiwyg": true
                  }
                },
                "event_ready": {
                  "type": "boolean",
                  "title": "Event ready",
                  "propertyOrder": 101100,
                  "format": "checkbox"
                }
              }
            }
          }
        }
      }
    }
  }
}